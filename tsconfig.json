{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "noEmit": false,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./scripts",
    "typeRoots": ["./node_modules/@minecraft"],
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedParameters": true
  }
}